
# Internal access to monitoring/admin tools
# Listens on localhost:8080 and proxies based on Host header

server {
    listen 8080;
    server_name grafana.internal;
    
    resolver 127.0.0.11 valid=30s;
    set $grafana_upstream http://grafana:3000;

    location / {
        proxy_pass $grafana_upstream;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}

server {
    listen 8080;
    server_name portainer.internal;

    resolver 127.0.0.11 valid=30s;
    set $portainer_upstream http://portainer:9000;

    location / {
        proxy_pass $portainer_upstream;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
    }
}

