# Database
DB_NAME={{ db_name }}
DB_USER={{ db_user }}
DB_PASSWORD={{ db_password }}
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD={{ redis_password }}

# MinIO
MINIO_ROOT_USER={{ minio_root_user }}
MINIO_ROOT_PASSWORD={{ minio_root_password }}
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=places-social

# Security
SECRET_KEY={{ secret_key | default('change_this_now') }}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email (для 2FA)
SMTP_HOST={{ smtp_host | default('') }}
SMTP_PORT={{ smtp_port | default(587) }}
SMTP_USER={{ smtp_user | default('') }}
SMTP_PASSWORD={{ smtp_password | default('') }}

# OAuth Providers
GOOGLE_OAUTH_CLIENT_ID={{ google_oauth_client_id | default('') }}
GOOGLE_OAUTH_CLIENT_SECRET={{ google_oauth_client_secret | default('') }}
VK_OAUTH_CLIENT_ID={{ vk_oauth_client_id | default('') }}
VK_OAUTH_CLIENT_SECRET={{ vk_oauth_client_secret | default('') }}
